<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.css' rel='stylesheet' />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" 
integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">    
@RenderSection("Styles", required: false)
</head>
<body>
     <div class="container-fluid" style="background:gainsboro;">
        <nav class="navbar navbar-expand-sm bg-white navbar-light fixed-top">
            <div class="navbar-brand">
                <img src="~/assets/Logo.png" width="180" height="50">
            </div>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item mx-3 dropdown"><a class="dropdown-toggle text-dark" data-toggle="dropdown" href="#">Info <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                        <li><a href="#" class="text-dark">Doctor Info</a></li>
                        <li><a href="#" class="text-dark">Nurses Info</a></li>
                        <li><a href="#" class="text-dark">Anaesthetist Info</a></li>
                        <li><a href="#" class="text-dark">Patient Info</a></li>
                      </ul>
                    </li>
                    <li><a href="#">Help</a></li>
                </ul>
                <ul class="navbar ml-auto">
                    <li><a href="#" class="text-dark"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
                </ul>
            </div>
        </nav>
    </div>

    @RenderBody()
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/axios/axios.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
