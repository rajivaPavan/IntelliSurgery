@model LoginViewModel

@{
    Layout = "~/Views/Account/Layout.cshtml";
    ViewBag.Title = "Login";
}

@section Styles{
    <link href="~/css/login.css" rel="stylesheet"/>
}

<div class="container-fluid">
        <div class="row" style="height:100vh;">
             <div class="col-lg-col-6 m-auto" id="logo">
                <img class="" src="~/assets/images/IntelliSurgery.png">
            </div>
            <div class="col-lg-6 justify-content-center my-auto">
                <form asp-action="Login" asp-controller="Account">
                    <div class="form_class border border-dark">
                        <h1 id="login">Welcome</h1><br />
                         <div class="form-group">  
                             <label for="name">Username</label> 
                        <input asp-for="UserName" type="text" class="form-control mb-2 mr-sm-2" id="name" name="name">
                          
                       </div> 
                       <div class="form-group">
                           <label for="pw">Password</label>
                        <input asp-for="Password" type="password" class="form-control mb-2 mr-sm-2" id="pw" name="password">
                         
                         </div>
                        <div class="form-check mb-2 mr-sm-2">                            
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input " id="RememberMe">
                        <label class="form-check-label" for="RememberMe">Remember me</label>
                        </div>
                        <button class="btn btn-info h-100" type="submit" id="submit-btn">Login</button><br />
                    </div>
                </form>
            </div>
        </div>
</div>


@section Scripts{

}