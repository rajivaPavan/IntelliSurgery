                              @*Anim pariatur cliche reprehenderit,*@
                           </div>
                        </div>
                     </div>
                  </div>
               </fieldset>
            </div>
         </div>
      </div>
   </div>
   <div class="row">
      <div class="col-md-6">
         <div class="shadow p-0 mb-5 bg-transparent rounded">
            <div class="form_class">
               <fieldset>
                  <legend><span class="number">5</span> Operating Theaters </legend>
                  <h6> Theater Type: </h6>
                  <div class="form-row">
                     <div class="col-6 col-md-3">
