                                <input type="text" class="form-control datetimepicker-input" data-target="#end-time"/>
                                <div class="input-group-append" data-target="#end-time" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fas fa-clock"></i></div>
                                </div>
                            </div>
                        </div>
                     </div>
                     
                  </div>
                  <div class="row">
                         <div class="col-12">
                             <div class="row justify-content-end">
                                 <div class="col-6 col-md-2">
                                    <button type="submit" class="btn btn-primary w-100 form-control">Add</button>
                                 </div>
                                 <div class="col-6 col-md-2">
                                    <p>
                                       <a class="btn btn-primary w-100" data-toggle="collapse" 
                                        href="#surgeon-list" role="button" aria-expanded="false" aria-controls="surgeonlist">List</a>
                                    </p>
                                 </div>
                             </div>
                         </div>
                         <div class="col-12">
                            <div class="collapse multi-collapse" id="surgeon-list">
